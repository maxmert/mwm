#!/usr/bin/env node;

var fs, log, pack, path, program, widgets;

pack = require('./package.json');

path = require('path');

widgets = require('./lib/widgets');

program = require('nomnom').colors();

log = require('./lib/logger');

fs = require('fs');

program.command('init').option('theme', {
  abbr: 't',
  help: 'Initialize a new theme in the current directory.',
  flag: true
}).option('modifyer', {
  abbr: 'm',
  help: 'Initialize a new modifyer in the current directory.',
  flag: true
}).callback(function(options) {
  return widgets.initApp(options);
}).help('Initializing new widget in the current directory.');

program.parse();
